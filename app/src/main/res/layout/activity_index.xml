    <EditText
        android:id="@+id/ednLocation"
        android:layout_width="274dp"
        android:layout_height="55dp"
        android:layout_marginBottom="352dp"
        android:autofillHints=""
        android:hint="@string/to_destination"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/departure"
        app:layout_constraintVertical_bias="0.183"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/startLocation"
        android:layout_width="279dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:autofillHints=""
        android:hint="@string/start_from"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <EditText

        android:id="@+id/travelDate"
        android:layout_width="279dp"
        android:layout_height="55dp"
        android:layout_marginBottom="204dp"
        android:autofillHints="Date"
        android:hint="@string/start_date"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrive"
        app:layout_constraintVertical_bias="0.258"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/reviewButton"
        android:layout_width="279dp"
        android:layout_height="59dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/buttonColor"
        android:text="@string/reviewButtonText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbutton"
        app:layout_constraintVertical_bias="0.239" />

    <Button
        android:id="@+id/searchbutton"
        android:layout_width="279dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/buttonColor"
        android:text="@string/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/travelDate"
        app:layout_constraintVertical_bias="0.096" />

    <Button
        android:id="@+id/othersReviews"
        android:layout_width="279dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/buttonColor"
        android:text="@string/otherReviews"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewButton">

    </Button>

    <EditText
        android:id="@+id/departure"
        android:layout_width="279dp"
        android:layout_height="49dp"
        android:hint="Departure IATA:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startLocation"
        app:layout_constraintVertical_bias="0.035" />

    <EditText
        android:id="@+id/arrive"
        android:layout_width="279dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:hint="Arrive IATA:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ednLocation"
        app:layout_constraintVertical_bias="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>